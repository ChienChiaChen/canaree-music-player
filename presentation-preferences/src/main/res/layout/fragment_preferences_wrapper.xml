<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <dev.olog.msc.presentation.base.widgets.StatusBarView
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar"
        android:background="?android:attr/colorPrimaryDark"
        android:elevation="@dimen/toolbar_elevation" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar"
        android:elevation="@dimen/toolbar_elevation"
        android:background="?colorSurface">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:elevation="@dimen/toolbar_elevation"
            android:focusable="true"
            android:padding="12dp"
            android:src="@drawable/vd_back_arrow" />

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="56dp"
            android:gravity="center_vertical"
            android:text="@string/settings"
            android:textAppearance="@style/Headline6.Alt" />

    </FrameLayout>

    <fragment
        android:name="dev.olog.msc.presentation.preferences.settings.SettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="prefs" />

</LinearLayout>