<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_toolbar"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/nowPlaying"
        android:text="@string/player_now_playing"
        android:layout_marginStart="@dimen/player_toolbar_now_playing_padding_start"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/NowPlaying"
        android:stateListAnimator="@animator/now_playing"/>

    <ImageButton
        android:id="@+id/lyrics"
        android:layout_gravity="end"
        android:layout_width="@dimen/common_icon_size"
        android:layout_height="@dimen/common_icon_size"
        android:src="@drawable/vd_offline_lyrics"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <dev.olog.msc.presentation.player.widgets.LottieFavorite
        android:id="@+id/favorite"
        android:layout_width="@dimen/common_icon_size"
        android:layout_height="@dimen/common_icon_size"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lyrics"/>

    <ImageButton
        android:id="@+id/playbackSpeed"
        android:layout_gravity="end"
        android:layout_width="@dimen/common_icon_size"
        android:layout_height="@dimen/common_icon_size"
        android:src="@drawable/vd_slow_motion"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/favorite"/>

</androidx.constraintlayout.widget.ConstraintLayout>