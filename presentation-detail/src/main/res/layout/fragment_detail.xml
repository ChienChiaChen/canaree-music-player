<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <dev.olog.msc.presentation.base.widgets.image.view.ParallaxImageView
        android:id="@+id/cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1.05"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:src="@drawable/vd_album"
        tools:scaleType="center"
        tools:background="?colorSecondary"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:imageViewCornerRadius="0"
        app:parallax="10"
        app:max_scrim_alpha_255="40"/>

    <LinearLayout
        android:id="@+id/textWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cover"
        android:paddingEnd="@dimen/detail_header_margin_start"
        android:paddingStart="@dimen/detail_header_margin_start"
        android:background="@drawable/top_round_corner"
        android:translationY="-15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Animal Ambition: An Untamed Desire to Win"
            android:lineSpacingMultiplier=".9"
            android:textAppearance="@style/Headline4" />

    </LinearLayout>

    <dev.olog.msc.presentation.detail.widgets.ParallaxRecyclerView
        android:id="@+id/list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/item_detail_song"
        android:clipToPadding="false"
        tools:layout_marginTop="350dp"
        android:paddingBottom="16dp" />

    <dev.olog.msc.presentation.base.widgets.RxFastScroller
        android:id="@+id/fastScroller"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:handleColor="@color/dark_grey"
        app:bubbleColor="?colorSecondary"
        app:trackColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp" />

    <dev.olog.msc.presentation.base.widgets.StatusBarView
        android:id="@+id/statusBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/status_bar"
        android:elevation="@dimen/toolbar_elevation"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <View
        android:id="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar"
        android:background="?colorSurface"
        android:elevation="@dimen/toolbar_elevation"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <ImageButton
        android:id="@+id/back"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/vd_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="@dimen/toolbar_elevation" />

    <ImageButton
        android:id="@+id/more"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/vd_more"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar"
        android:clickable="true"
        android:focusable="true"
        android:elevation="@dimen/toolbar_elevation" />

    <TextView
        android:id="@+id/headerText"
        tools:text="Selena Gomez"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintEnd_toStartOf="@+id/more"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:elevation="@dimen/toolbar_elevation"
        android:visibility="gone"
        tools:visibility="visible"
        android:textAppearance="@style/Headline6.Alt" />

    <ImageButton
        android:id="@+id/filter"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintEnd_toStartOf="@+id/more"
        android:src="@drawable/vd_filter"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar"
        android:clickable="true"
        android:focusable="true"
        android:elevation="@dimen/toolbar_elevation" />

    <FrameLayout
        android:id="@+id/searchWrapper"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintEnd_toStartOf="@+id/filter"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar"
        android:elevation="@dimen/toolbar_elevation"
        android:visibility="gone"
        tools:visibility="visible">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/SearchThemeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/common_filter"
                style="@style/SearchThemeEditText"/>

        </com.google.android.material.textfield.TextInputLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>